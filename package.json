{
  "name": "@whiteswap/sdk",
  "license": "MIT",
  "version": "4.1.4",
  "description": "ðŸ›  An SDK for building applications on top of WhiteSwap.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": "https://github.com/WhiteSwap/whiteswap-sdk.git",
  "keywords": [
    "whiteswap",
    "ethereum"
  ],
  "module": "dist/sdk.esm.js",
  "scripts": {
    "lint": "tsdx lint src test",
    "lint:fix": "tsdx lint src test --fix",
    "build": "tsdx build",
    "start": "tsdx watch",
    "test": "tsdx test",
    "test:watch": "tsdx test --watch",
    "test:coverage": "tsdx test --coverage",
    "size": "size-limit",
    "prepare": "husky install"
  },
  "dependencies": {
    "@ethersproject/address": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/solidity": "^5.7.0",
    "@ethersproject/units": "^5.7.0",
    "big.js": "^5.2.2",
    "decimal.js-light": "^2.5.1",
    "jsbi": "3.2.5",
    "tiny-invariant": "^1.2.0",
    "toformat": "^2.0.0",
    "tronweb": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@size-limit/file": "^8.1.2",
    "@types/big.js": "^6.1.6",
    "@types/jest": "^24.0.25",
    "babel-plugin-transform-jsbi-to-bigint": "^1.4.0",
    "husky": "^8.0.3",
    "size-limit": "^8.1.2",
    "tsdx": "^0.14.1"
  },
  "engines": {
    "node": ">=10"
  },
  "size-limit": [
    {
      "path": "dist/sdk.esm.js",
      "limit": "12 KB"
    },
    {
      "path": "dist/sdk.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/*",
      "limit": "120 KB"
    }
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 140,
    "arrowParens": "avoid",
    "tabWidth": 2,
    "quoteProps": "consistent",
    "trailingComma": "none",
    "bracketSpacing": true
  }
}
